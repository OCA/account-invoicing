<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="account_fiscal_position_inherited_view" model="ir.ui.view">
            <field name="name">account.fiscal.position.inherited.view</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="with_fiscal_agent"/>
                    <field name="fiscal_agent_company_id" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}" context="{'bypass_record_rules': 1}"/>
                    <field name="fiscal_agent_position_id" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}" domain="[('company_id', '=', fiscal_agent_company_id)]" context="{'bypass_record_rules': 1}"/>
                </field>
                <field name="account_ids" position="after">
                    <!-- Agent Account Mapping -->
                    <separator string="Fiscal Agent Account Mapping" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}"/>
                     <field name="fiscal_agent_account_ids" widget="one2many_list" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}">
                        <tree string="Fiscal Agent Account Mapping" editable="bottom">
                            <field name="account_src_id" domain="[('company_id', '=', parent.company_id)]"/>
                            <field name="account_dest_id" domain="[('company_id', '=', parent.fiscal_agent_company_id)]" context="{'bypass_record_rules': 1}"/>
                        </tree>
                    </field>
                    <!-- Agent Taxes Mapping -->
                    <separator string="Fiscal Agent Taxes Mapping" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}"/>
                    <field name="fiscal_agent_tax_ids" widget="one2many_list" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}">
                        <tree string="Tax Mapping" editable="bottom">
                            <field name="tax_src_id"
                                    domain="[('parent_id','=',False), ('company_id', '=', parent.company_id)]"/>
                            <field name="tax_dest_id"
                                    domain="[('parent_id','=',False), ('company_id', '=', parent.fiscal_agent_company_id)]" context="{'bypass_record_rules': 1}"/>
                        </tree>
                    </field>
                    <!-- Agent Journal Mapping -->
                    <separator string="Fiscal Agent Journal Mapping" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}"/>
                    <field name="fiscal_agent_journal_ids" widget="one2many_list" attrs="{'invisible': [('with_fiscal_agent', '=', False)], 'required': [('with_fiscal_agent', '!=', False)]}">
                        <tree string="Journal Mapping" editable="bottom">
                            <field name="journal_src_id" domain="[('company_id', '=', parent.company_id)]"/>
                            <field name="journal_dest_id" domain="[('company_id', '=', parent.fiscal_agent_company_id)]" context="{'bypass_record_rules': 1}"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

    </data>
</openerp>
