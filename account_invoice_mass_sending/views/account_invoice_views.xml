<odoo>

    <record id="action_invoice_mass_send_print" model="ir.actions.server">
        <field name="name">Send</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="state">code</field>
        <field name="code">records.mass_send_print()</field>
    </record>

    <record id="ir_invoice_mass_send_print" model="ir.values">
        <field eval="'client_action_multi'" name="key2"/>
        <field eval="'account.invoice'" name="model"/>
        <field name="name">Send</field>
        <field eval="'ir.actions.server,%d'%action_invoice_mass_send_print" name="value"/>
    </record>

    <record id="account_invoice_form" model="ir.ui.view">
        <field name="name">Account Invoice Form (in invoice_mass_sending)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="sending_in_progress"/>
            </field>
        </field>
    </record>

</odoo>
