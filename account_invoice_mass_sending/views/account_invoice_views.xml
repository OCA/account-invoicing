<odoo>

    <record id="account_invoice_form" model="ir.ui.view">
        <field name="name">Account Invoice Form (in invoice_mass_sending)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="sending_in_progress"/>
            </field>
        </field>
    </record>

<record id="channel_prepare_send_print_invoice" model="queue.job.channel">
    <field name="name">prepare_send_print_invoice</field>
    <field name="parent_id" ref="queue_job.channel_root" />
</record>
<record id="job_function_account_invoice_do_prepare_send_print" model="queue.job.function">
    <field name="model_id" ref="account.model_account_invoice"/>
    <field name="method">do_prepare_send_print</field>
    <field name="channel_id" ref="channel_prepare_send_print_invoice"/>
</record>

<record id="channel_send_print_invoice" model="queue.job.channel">
    <field name="name">send_print_invoice</field>
    <field name="parent_id" ref="queue_job.channel_root"/>
</record>
<record id="job_function_account_invoice_do_send_print" model="queue.job.function">
    <field name="model_id" ref="account.model_account_invoice"/>
    <field name="method">do_send_print</field>
    <field name="channel_id" ref="channel_send_print_invoice"/>
</record>

</odoo>
