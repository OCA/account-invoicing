<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="name">sale_order_invoice_link.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//sheet/h1" position="before">
                   <div class="oe_right oe_button_box">
                        <button name="action_view_sales"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-usd" >
                            <field name="sale_order_count" widget="statinfo" string="Sales"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
