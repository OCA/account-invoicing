<odoo>
  <record id="account_invoice_to_draft_view" model="ir.ui.view">
    <field name="name">account.invoice.to.draft.form</field>
    <field name="model">account.invoice.to.draft</field>
    <field name="arch" type="xml">
      <form string="Set Invoices to Draft">
        <p>
          Are you sure you want to reset all the selected invoices to draft?
        </p>
        <div role="alert" class="alert alert-warning" colspan="4" >
          WARNING: Following invoices have payments. Resetting to draft will remove reconciliations and delete the account moves!
        </div>
        <group string="With payment" colspan="4">
          <field name="invoice_with_payment_ids" nolabel="1">
            <tree editable="bottom" create="0">
              <field name="partner_id"/>
              <field name="date_invoice"/>
              <field name="number"/>
              <field name="amount_total"/>
              <field name="residual"/>
              <field name="currency_id"/>
            </tree>
          </field>
        </group>
        <group string="Without payment" colspan="4">
          <field name="invoice_without_payment_ids" nolabel="1">
            <tree editable="bottom" create="0">
              <field name="partner_id"/>
              <field name="date_invoice"/>
              <field name="number"/>
              <field name="amount_total"/>
              <field name="residual"/>
              <field name="currency_id"/>
            </tree>
          </field>
        </group>
        <footer>
          <button string="Reset to Draft" name="invoices_to_draft" type="object" default_focus="1" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <act_window id="action_account_invoice_to_draft"
      multi="True" groups="account.group_account_invoice"
      key2="client_action_multi" name="Set Invoices to Draft"
      res_model="account.invoice.to.draft" src_model="account.invoice"
      view_mode="form" target="new" view_type="form" />
</odoo>
