<odoo>
    <record id="account_move_tag_view_form" model="ir.ui.view">
        <field name="name">account.move.tag.view.form</field>
        <field name="model">account.move.tag</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" placeholder="e.g. Credit Card" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" required="True" widget="color_picker" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_move_tag_view_tree" model="ir.ui.view">
        <field name="name">account.move.tag.view.tree</field>
        <field name="model">account.move.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom" sample="1">
                <field name="name" />
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>

    <record id="account_move_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">account.move.tag</field>
        <field name="view_id" ref="account_move_tag_view_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create Account Move Tags
            </p><p>
            Use Tags to manage and track your invoices (credit card, ...)
            </p>
        </field>
    </record>
</odoo>
