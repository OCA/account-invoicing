<?xml version="1.0" ?>
<odoo>
    <!-- Form and tree -->
    <record model="ir.ui.view" id="account_product_move_form_view">
        <field name="name">account.product.move.form</field>
        <field name="model">account.product.move</field>
        <field name="arch" type="xml">
            <form>
                <field name="company_id" invisible="1" />
                <header>
                    <button
                        name="button_complete"
                        string="Complete"
                        type="object"
                        class="oe_highlight"
                        states="new"
                    />
                    <button
                        name="button_reset"
                        string="Reset"
                        type="object"
                        class="oe_highlight"
                        states="complete"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="new,complete"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field name="active" />
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group name="general" colspan="4" col="2">
                        <field
                            name="product_tmpl_ids"
                            widget="many2many_tags"
                            options="{'no_create_edit': True, 'no_open': True}"
                            string="Products"
                        />
                        <field name="journal_id" />
                    </group>
                    <group name="config" colspan="4" col="4">
                        <field name="line_ids" colspan="4">
                            <tree editable="bottom">
                                <field name="company_id" invisible="1" />
                                <field name="move_id" invisible="1" />
                                <field
                                    name="account_id"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                />
                                <field name="amount_currency" />
                                <field
                                    name="currency_id"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                />
                                <field name="debit" />
                                <field name="credit" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="account_product_move_tree_view">
        <field name="name">account.product.move.tree</field>
        <field name="model">account.product.move</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="journal_id" />
            </tree>
        </field>
    </record>
    <!-- Search -->
    <record model="ir.ui.view" id="account_product_move_search_view">
        <field name="name">account.product.move.search</field>
        <field name="model">account.product.move</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
                <field name="journal_id" />
            </search>
        </field>
    </record>
    <!-- Action and menu -->
    <record model="ir.actions.act_window" id="account_product_move_act_window">
        <field name="name">Account Product Move</field>
        <field name="res_model">account.product.move</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="menu_product_move"
        name="Extra Product Moves"
        action="account_product_move_act_window"
        parent="account.menu_finance_entries_accounting_journals"
        groups="account.group_account_user"
        sequence="100"
    />
</odoo>
