<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree.category_ids</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree" />
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field
                    name="category_ids"
                    optional="hide"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                />
                </field>
            </field>
        </record>

        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree.category_ids</field>
            <field name="inherit_id" ref="account.view_invoice_tree" />
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field
                    name="category_ids"
                    optional="hide"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                />
                </field>
            </field>
        </record>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field
                    name="category_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_create_edit': True}"
                    placeholder="Tags..."
                />
                </field>
            </field>
        </record>

        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.move.search category</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field
                    string="Tag present"
                    name="category_ids"
                    filter_domain="[('category_ids','ilike', self)]"
                />
                    <field
                    string="Tag absent"
                    name="category_ids"
                    filter_domain="[('category_ids','not ilike', self)]"
                />
                </field>
            </field>
        </record>

</odoo>
