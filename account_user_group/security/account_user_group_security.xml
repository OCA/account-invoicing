<odoo>

    <record id="group_account_account_receivable" model="res.groups">
        <field name="name">Accounts Receivables</field>
        <field name="category_id" ref="base.module_category_accounting_accounting" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_account_account_payable" model="res.groups">
        <field name="name">Accounts Payables</field>
        <field name="category_id" ref="base.module_category_accounting_accounting" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="account.group_account_invoice" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('group_account_account_receivable')), (4, ref('group_account_account_payable'))]"
        />
    </record>

    <record id="rule_account_receivable_journal" model="ir.rule">
        <field name="name">AR Journals</field>
        <field name="model_id" ref="account.model_account_journal" />
        <field name="groups" eval="[(4, ref('group_account_account_receivable'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[("type", "=", "sale")]</field>
    </record>

    <record id="rule_account_payable_journal" model="ir.rule">
        <field name="name">AP Journals</field>
        <field name="model_id" ref="account.model_account_journal" />
        <field name="groups" eval="[(4, ref('group_account_account_payable'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[("type", "=", "purchase")]</field>
    </record>

    <record id="rule_account_payable_journal_invoice_user" model="ir.rule">
        <field name="name">AP Journals</field>
        <field name="model_id" ref="account.model_account_journal" />
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[(1, "=", 1)]</field>
    </record>

    <record id="rule_account_receivable_journal_invoice_user" model="ir.rule">
        <field name="name">AR Journals</field>
        <field name="model_id" ref="account.model_account_journal" />
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="perm_read" eval="True" />
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[(1, "=", 1)]</field>
    </record>

</odoo>
