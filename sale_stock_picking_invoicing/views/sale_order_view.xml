<odoo>

    <record id="sale_stock_picking_invoicing_order_form" model="ir.ui.view">
        <field name="name">sale_stock_picking_invoicing.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="button_create_invoice_invisible" invisible="1" />
            </field>
            <xpath
                expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][1]"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': [('button_create_invoice_invisible', '=', True)]}</attribute>
            </xpath>
            <!--
             There are two similar buttons, one just appear in status Sale the other
             appear in all status but open with Down Payments option selected.
             TODO: Should keep visible one of this buttons? Down Payments case?
            -->
            <xpath
                expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|', ('button_create_invoice_invisible', '=', True), ('state', '=', 'sale')]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
