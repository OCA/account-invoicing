<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <block id="invoicing_settings" position="after">
                <block id="sale_order_invoicing_settings" title="Sales Order Invoicing">
                    <setting
                        id="sale_order_invoicing_setting"
                        company_dependent="1"
                        string="Default Grouping Criteria"
                        help="If empty, default odoo value will be used"
                    >
                        <field name="res_default_sale_invoicing_grouping_criteria_id" />
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
