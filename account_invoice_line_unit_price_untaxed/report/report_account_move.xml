<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//thead/tr/th[@name='th_priceunit']" position="before">
            <th class="text-right">Unit Price Without Taxes</th>
        </xpath>
        <xpath expr="//td[span[@t-field='line.price_unit']]" position="before">
            <td class="text-right">
                <span t-field='line.price_unit_untaxed' />
            </td>
        </xpath>
    </template>
</odoo>
