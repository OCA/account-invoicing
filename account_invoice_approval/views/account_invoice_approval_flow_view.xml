<odoo>
    <record id="account_invoice_approval_flow_tree" model="ir.ui.view">
        <field name="model">account.invoice.approval.flow</field>
        <field name="arch" type="xml">
            <tree default_order="sequence">
                <field name="sequence"/>
                <field name="domain"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="account_invoice_approval_flow_form" model="ir.ui.view">
        <field name="model">account.invoice.approval.flow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="domain" widget="domain" options="{'model': 'account.invoice'}"/>
                        <field name="active"/>
                        <field name="step_ids">
                            <tree editable="bottom">
                                <field name="sequence" />
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="override_user_ids" widget="many2many_tags" />
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_invoice_approval_flow_search" model="ir.ui.view">
        <field name="model">account.invoice.approval.flow</field>
        <field name="arch" type="xml">
            <search>
                <field name="domain" string="Domain"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="account_invoice_approval_flow_action">
        <field name="name">Invoice Approval Flows</field>
        <field name="res_model">account.invoice.approval.flow</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
