<?xml version="1.0" ?>
<odoo>
    <!-- Form and tree -->
    <record model="ir.ui.view" id="account_move_journal_template_form_view">
        <field name="name">account.move.journal.template.form</field>
        <field name="model">account.move.journal.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field name="active" />
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group name="config" colspan="4" col="4">
                        <field name="product_tmpl_id" colspan="4" options="{'no_create_edit': True, 'no_open': True}"/>
                        <field name="journal_item_ids" colspan="4">
                            <tree editable="bottom">
                                <field
                                    name="account_id"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                />
                                <field name="debit" />
                                <field name="credit" />
                                <field
                                    name="currency_id"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                />
                                <field name="journal_template_id" invisible="1" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="account_move_journal_template_tree_view">
        <field name="name">account.move.journal.template.tree</field>
        <field name="model">account.move.journal.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field
                    name="product_tmpl_id"
                    string="Product"
                />
                <field name="journal_item_ids" />
            </tree>
        </field>
    </record>
    <!-- Search -->
    <record model="ir.ui.view" id="account_move_journal_template_search_view">
        <field name="name">account.move.journal.template.search</field>
        <field name="model">account.move.journal.template</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
                <field
                    name="product_tmpl_id"
                    string="Product Default Code"
                    filter_domain="[('product_tmpl_id.default_code', 'ilike', self)]"
                />
                <field
                    name="product_tmpl_id"
                    string="Product Name"
                    filter_domain="[('product_tmpl_id.name', 'ilike', self)]"
                />
            </search>
        </field>
    </record>
    <!-- Action and menu -->
    <record model="ir.actions.act_window" id="account_move_journal_template_act_window">
        <field name="name">Account Move Journal Template</field>
        <field name="res_model">account.move.journal.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="menu_journal_template"
        name="Journal Templates"
        action="account_move_journal_template_act_window"
        parent="account.menu_finance_entries_accounting_journals"
        groups="account.group_account_user"
        sequence="100"
    />
</odoo>
