<odoo>


<record id="view_move_form" model="ir.ui.view">
    <field name="name">Add Transmit Method on Invoice form view</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <field name="journal_id" position="after">
            <field name="transmit_method_id" widget="selection"
                domain="[('customer_ok', '=', True)]"
                attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund'))]}"/>
            <field name="transmit_method_code" invisible="1"/>
        </field>
        <button name="action_invoice_sent" position="attributes">
            <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'posted'), ('invoice_sent', '=', True), ('type', 'not in', ('out_invoice', 'out_refund')), ('transmit_method_code', 'not in', ('mail', False))]}</attribute> <!-- Only show the "Send by Mail" button when the transmit method is E-mail or empty -->
        </button>
        <field name="invoice_source_email" position="after">
            <field name="transmit_method_id" widget="selection"
                attrs="{'invisible': [('type', 'not in', ('in_invoice', 'in_refund'))]}"
                domain="[('supplier_ok', '=', True)]"/>
        </field>
    </field>
</record>


</odoo>
