<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="name">res.config.settings.form (in account_invoice_transmit_method)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_is_email']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="invoice_is_transmit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="invoice_is_transmit"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_multi_transmit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_multi_transmit"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>



</odoo>
