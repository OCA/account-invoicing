            <xpath expr="//field[@name='ref']" position="after">
                <label for="payment_retention"/>
                <div class="d-flex">
                    <field class="oe_edit_only" name="payment_retention"/>
                    <field class="oe_edit_only" invisible="payment_retention != 'percent'" name="retention_method"
                           required="payment_retention == 'percent'"/>
                    <field class="oe_edit_only" invisible="payment_retention == False" name="amount_retention"
                           placeholder="Amount"/>
                    <span class="oe_edit_only" invisible="payment_retention == False">
                        =
                    </span>
                    <field invisible="retention_amount_currency == False or payment_retention == False"
                           name="retention_amount_currency"/>
                </div>
                <field invisible="1" name="retention_residual_currency"/>
                <field force_save="1" groups="account_invoice_payment_retention.group_payment_retention" invisible="1"
                       name="domain_retained_move_ids" widget="many2many_tags"/>
                <field domain="[('id', 'in', domain_retained_move_ids)]"
                       groups="account_invoice_payment_retention.group_payment_retention"
                       invisible="payment_retention != False or move_type == 'entry'" name="retained_move_ids"
                       options="{'no_create': True, 'no_edit': True, 'no_open': True}" widget="many2many_tags"/>
            </xpath>
