<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='account_vendor_bills']" position="inside">
                <setting id="show_payment_retention"
                         help="This enable retention option in invoice, to be retained on its payment.">
                    <field name="group_payment_retention"/>
                    <div class="content-group" invisible="group_payment_retention == False">
                        <div class="mt16">
                            <label class="oe_edit_only" for="retention_account_id"
                                   string="Retention Payable Account"/>
                            <field name="retention_account_id" required="group_payment_retention == True"/>
                        </div>
                        <div class="mt16">
                            <label class="oe_edit_only" for="retention_receivable_account_id"
                                   string="Retention Receivable Account"/>
                            <field name="retention_receivable_account_id"
                                   required="group_payment_retention == True"/>
                        </div>
                    </div>
                </setting>
                <setting id="show_retention_method"
                         help="Default your retention method">
                    <field name="retention_method" widget="radio"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
