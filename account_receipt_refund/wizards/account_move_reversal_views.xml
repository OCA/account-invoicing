<odoo>
    <record id="view_account_move_reversal" model="ir.ui.view">
        <field name="name">Add Receipt Refund to Account Move Reversal Form View</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='refund_method']/.." position="after">
                 <group
                    attrs="{
                         'invisible': [
                             ('move_type', 'not in', ('out_receipt', 'in_receipt')),
                         ],
                     }"
                >
                    <field
                        name="refund_method"
                        widget="radio"
                        attrs="{'readonly': [('residual', '=', 0)]}"
                    />
                 </group>
                 <group
                    attrs="{
                         'invisible': [
                             ('move_type', 'not in', ('out_receipt', 'in_receipt')),
                         ],
                     }"
                >
                     <div
                        attrs="{'invisible':[('refund_method', '!=', 'refund')]}"
                        class="oe_grey"
                        colspan="4"
                    >
                         The Receipt Refund is created in draft and can be edited before being issued.
                     </div>
                     <div
                        attrs="{'invisible':[('refund_method', '!=', 'cancel')]}"
                        class="oe_grey"
                        colspan="4"
                    >
                         The Receipt Refund is auto-validated and reconciled with the Receipt.
                     </div>
                     <div
                        attrs="{'invisible':[('refund_method', '!=', 'modify')]}"
                        class="oe_grey"
                        colspan="4"
                    >
                         The Receipt Refund is auto-validated and reconciled with the Receipt.
                         The original Receipt is duplicated as a new draft.
                     </div>
                 </group>
            </xpath>
        </field>
    </record>
</odoo>
