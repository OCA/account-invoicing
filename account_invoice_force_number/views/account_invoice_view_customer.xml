<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- This view adds "Force Number" to Invoice Form for Customers -->
    <record model="ir.ui.view" id="account_invoice_form_force_number">
        <field name="name">account.invoice.form.force_number</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="move_name" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'draft')]}</attribute>
                <attribute name="string">Force Number</attribute>
                <attribute name="help">Use this field to change Invoice Number or leave empty for default numbering</attribute>
                <attribute name="invisible">0</attribute>
                <attribute name="groups">account_invoice_force_number.group_allow_invoice_force_number</attribute>
            </field>
        </field>
    </record>
</odoo>
