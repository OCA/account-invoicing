<odoo>

    <record model="ir.ui.view" id="account_invoice_split_form">
        <field name="name">account.invoice.split.form (in account_invoice_split)</field>
        <field name="model">account.invoice.split</field>
        <field name="arch" type="xml">
            <form string="Split Invoice">
                <notebook>
                    <page string="Invoice Line to Split in a new invoice"
                          name="lines_to_split_page">
                        <field name="line_ids" >
                            <tree editable="bottom" create="false" >
                                <field name="name" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="total_quantity" readonly="1"/>
                                <field name="quantity_to_split" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="split_invoice" string="Split Invoice"
                            type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Split Invoice" res_model="account.invoice.split"
                src_model="account.invoice" view_mode="form" target="new"
                id="action_account_invoice_split_form"/>

</odoo>

