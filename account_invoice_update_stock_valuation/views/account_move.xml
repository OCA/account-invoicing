<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']//tree/field[@name='sequence']"
                position="after"
            >
                <field name="stock_valuation_ok" invisible="True" />
                <button
                    icon="fa-th"
                    attrs="{'invisible': [('stock_valuation_ok', '=', True)]}"
                    title="Stock valuation to update"
                />
            </xpath>
            <header position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    attrs="{'invisible': [('svl_warn_msg', '=', False)]}"
                    style="margin-bottom:0px;"
                >
                    <p>
                        <i class="fa fa-info-circle" />
                        &amp;nbsp;
                        <field name="svl_warn_msg" class="oe_inline" />
                    </p>
                </div>
            </header>
        </field>
    </record>

</odoo>
