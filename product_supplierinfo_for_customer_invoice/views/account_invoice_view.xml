<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.product.code.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field eval="16" name="priority" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                position="after"
            >
                <field
                    name="product_customer_code"
                    attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund'))]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
