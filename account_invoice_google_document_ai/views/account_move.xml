<odoo>
    <record model="ir.ui.view" id="account_move_form_view">
        <field name="name">account.move.form (in account_invoice_ocr_google)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <header position="inside">
                <button
                    name="ocr_process"
                    class="oe_highlight"
                    string="Send to OCR"
                    type="object"
                    attrs="{'invisible': [('can_send_to_ocr', '=', False)]}"
                />
            </header>
            <field name="id" position="after">
                <field name="can_send_to_ocr" invisible="1" />
            </field>
        </field>
    </record>


</odoo>
