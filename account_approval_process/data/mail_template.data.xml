<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_request_approval" model="mail.template">
            <field name="name">Request invoice approval</field>
            <field name="email_from">${(object.sudo().create_uid.email and '&quot;%s&quot; &lt;%s&gt;' % (object.sudo().create_uid.name, object.sudo().create_uid.email) or '')|safe}</field>
            <field name="subject">${object.company_id.name} Invoice approval requested</field>
            <field name="partner_to">${object.current_approval_process_id.approvers}</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<p>The user ${user.name} requested to approve '${object.current_approval_process_id.name}' an invoice.</p>
]]></field>
        </record>
    </data>
</odoo>
