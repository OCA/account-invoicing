<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="action_reverse" position="after">
                <field name="debit_move_id" invisible="1"/>
                <button name="%(action_account_move_debitnote)d"
                        type="action"
                        string="Add Debit Note"
                        attrs="{'invisible': ['|', '|', ('type', '=', 'out_refund'), ('debit_move_id', '!=', False), ('state', '!=', 'posted')]}"/>
            </button>
            <xpath expr="//page[@id='other_tab']/group//group[1]//field[@name='invoice_origin']" position="after">
                <field name="debit_move_id" invisible="1"/>
                <field name="debit_move_ids"
                       attrs="{'invisible': ['|', ('type', '!=', 'out_invoice'), ('debit_move_ids', '=', [])]}"
                       widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">account.move.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <separator/>
                <filter name="invoice_filter"
                        string="Invoices"
                        domain="[('debit_move_id', '=', False)]"
                        help="Filter invoice from My Invoice"/>
                <filter name="debitnote_filter"
                        string="Debit Notes"
                        domain="[('debit_move_id','!=', False)]"
                        help="Filter debit note from My Invoice"/>
            </search>
        </field>
    </record>

</odoo>
