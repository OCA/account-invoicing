<odoo>

    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="name">res.partner.form (in account_invoice_validation)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <group name="purchase" position="after">
                <field name="validation_user_id_domain" invisible="1" />
                <field name="use_invoice_first_approval" invisible="1" />
                <!--Visible only if the partner is a supplier-->
                <field
                    name="validation_user_id"
                    attrs="{'invisible': [('use_invoice_first_approval','=',False)]}"
                    domain="validation_user_id_domain"
                />
            </group>
        </field>
    </record>


</odoo>
