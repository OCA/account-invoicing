<odoo>
    <record model="ir.ui.view" id="account_config_settings_form_view">
        <field
            name="name"
        >Account.config.settings.form (in account_invoice_validation)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="priority" eval="90" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[hasclass('app_settings_block')]//div[@id='quick_edit_mode']"
                position="after"
            >
                <h2>Invoice Approval</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="invoice_validation_setting_container"
                >
                    <div class="col-12 col-lg-12 o_setting_box" id="invoice_validation">
                        <div class="o_setting_left_pane">
                            <field name="use_invoice_first_approval" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_invoice_first_approval" />
                            <div class="text-muted">
                                Use Partner's Approver As First Approval On Invoices
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 o_setting_box" id="invoice_validation">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="validation_user_id" />
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                aria-label="Values set here are company-specific."
                                groups="base.group_multi_company"
                                role="img"
                            />

                            <div>
                                <field name="validation_user_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
