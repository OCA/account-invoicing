<odoo noupdate="1">
    <!-- Sends every week a reminder to every users that need to validate invoices -->
    <record model="ir.cron" id="ir_cron_notify_invoice_validation">
        <field name="name">Invoice Validation - Notify assignation late</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False" />
        <field name="active" eval="False" />
        <field
            name="nextcall"
            eval="(DateTime.now() + timedelta(days=7)).strftime('%Y-%m-%d 13:00:00')"
        />
        <field name="model_id" ref="account.model_account_move" />
        <field name="state">code</field>
        <field name="code">model.notify_validation_process_waiting()</field>
    </record>
</odoo>
