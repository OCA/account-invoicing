<odoo noupdate="1">
  <record id="mail_template_invoice_assign_late" model="mail.template">
    <field name="name">Invoice Approval - Reminder</field>
    <field
            name="email_from"
        >{{(user.email and '%s &lt;%s&gt;' % (user.name, user.email) or '')}}</field>
    <field name="subject">Invoice Approval - Automatic reminder</field>
    <field name="partner_to">{{object.partner_id.id}}</field>
    <field name="model_id" ref="base.model_res_users" />
    <field name="auto_delete" eval="True" />
    <field name="lang">{{object.partner_id.lang}}</field>
    <field
            name="body_html"
        ><![CDATA[
<p>Dear <t t-out="object.partner_id.name"></t>,

<p>You have some purchase invoices to approve:</p>
<t t-set="invoice_ids" t-value="ctx.get('reminder_account_invoice_ids')"/>
<t t-if="invoice_ids">
    <p>
      <a
  t-att-href="'/web#action=account_invoice_validation.account_move_act_window'"
  style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;"
>
          View Invoices
      </a>
    </p>
    <ul>
        <li t-as="invoice" t-foreach= "object.env['account.move'].browse(invoice_ids).filtered(lambda r: r.state != 'draft')" class="list-group-item form-group clearfix active">
            <div t-attf-style="display: inline-block; border-radius: 50%; width: 10px; height: 10px;};"> </div>
                <span style="margin-left:5px" t-out="invoice.name"></span>
        </li>
    </ul>
</t>
</p>
<br/><br/>
]]></field>
  </record>

  <template id="message_validation_user_assigned">
    <p>Dear <t t-esc="object.validation_user_id.name" />,</p>
    <p>You have been assigned to the <t t-esc="object._description.lower()" /> <t
                t-esc="object.display_name"
            />.</p>
    <p>
      <a
                t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (object._name, object.id)"
                style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;"
            >
        View <t t-esc="object._description.lower()" />
      </a>
    </p>
  </template>
</odoo>
