<odoo>
    <record id="view_account_journal_group_form" model="ir.ui.view">
        <field name="name">Add included journals in journal group form view</field>
        <field name="model">account.journal.group</field>
        <field name="inherit_id" ref="account.view_account_journal_group_form" />
        <field name="arch" type="xml">
            <field name="excluded_journal_ids" position="before">
                <field
                    name="included_journal_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
            </field>
        </field>
    </record>

    <record id="view_account_journal_group_tree" model="ir.ui.view">
        <field name="name">Add included journals in journal group tree view</field>
        <field name="model">account.journal.group</field>
        <field name="inherit_id" ref="account.view_account_journal_group_tree" />
        <field name="arch" type="xml">
            <field name="excluded_journal_ids" position="before">
                <field
                    name="included_journal_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
            </field>
        </field>
    </record>
</odoo>
