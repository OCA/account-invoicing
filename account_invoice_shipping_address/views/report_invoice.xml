<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[3]" position="replace">
            <div class="col-xs-5 col-xs-offset-7">
                <t t-if="o.address_shipping_id">
                    <adres t-field="o.address_shipping_id"
                        t-field-options='{"widget": "contact",
                            "fields": ["address", "name"],
                            "no_marker": true}' />
                </t>
                <t t-if="not o.address_shipping_id">
                    <adres t-field="o.partner_id"
                        t-field-options='{"widget": "contact",
                            "fields": ["address", "name"],
                            "no_marker": true}' />
                </t>
                <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
            </div>
        </xpath>
    </template>

</odoo>
