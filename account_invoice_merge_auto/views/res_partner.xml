<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="partner_view_invoice_merge_params">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.partner_view_buttons"/>
        <field name="arch" type="xml">
          <xpath expr="//group[@name='banks']" position="after">
            <group string="Payment preferences" name="payment_preferences">
              <field name="auto_merge_invoice"/>
              <field name="invoice_merge_recurring_rule_type"
                  attrs="{'required': [('auto_merge_invoice', '=', True)],
                 'ivisible': [('auto_merge_invoice', '=', False)], }"/>
              <field name="invoice_merge_recurring_interval"
                  attrs="{'required': [('auto_merge_invoice', '=', True)],
                 'ivisible': [('auto_merge_invoice', '=', False)], }"/>
              <field name="invoice_merge_next_date"
                  attrs="{'required': [('auto_merge_invoice', '=', True)],
                 'ivisible': [('auto_merge_invoice', '=', False)], }"/>
            </group>
          </xpath>
        </field>
    </record>

</odoo>
