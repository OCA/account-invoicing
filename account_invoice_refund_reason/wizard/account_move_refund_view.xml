<odoo>

    <record id="extended_view_account_move_refund" model="ir.ui.view">
        <field name="name">extended.account.move.refund.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_mode']" position="before">
                <field name="reason_id" required="1" />
            </xpath>
        </field>
    </record>

</odoo>
