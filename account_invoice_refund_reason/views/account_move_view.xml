<odoo>

    <record id="extended_view_account_invoice" model="ir.ui.view">
        <field name="name">extended.account.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='other_info']/group/group[2]/field[@name='fiscal_position_id']"
                position="after"
            >
                <field
                    name="reason_id"
                    attrs="{'invisible': [('reason_id', '=', False)]}"
                    readonly="1"
                />
            </xpath>
            <xpath
                expr="//page[@id='other_tab_entry']/group/group[1]/field[@name='to_check']"
                position="after"
            >
                <field
                    name="reason_id"
                    attrs="{'invisible': [('reason_id', '=', False)]}"
                    readonly="1"
                />
            </xpath>
        </field>
    </record>

</odoo>
