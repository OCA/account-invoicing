<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">related.pickings.account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="stock_picking_invoice_link.invoice_form"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook/page[@string='Pickings']/field[@name='picking_ids']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
          <xpath expr="//notebook/page[@string='Pickings']/field[@name='picking_ids']" position="after">
            <field name="related_picking_ids"/>
          </xpath>
        </field>
    </record>
  </data>
</openerp>
