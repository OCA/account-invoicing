<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <template
        id="report_invoice_document"
        inherit_id="account.report_invoice_document"
    >
            <xpath expr="//h2/span[@t-field='o.name']" position="before">
                <span
                t-if="o.move_type == 'out_receipt' and o.state == 'posted'"
            >Receipt</span>
                <span
                t-if="o.move_type == 'out_receipt' and o.state == 'draft'"
            >Draft Receipt</span>
                <span
                t-if="o.move_type == 'out_receipt' and o.state == 'cancel'"
            >Cancelled Receipt</span>
                <span t-if="o.move_type == 'in_receipt'">Purchase Receipt</span>
            </xpath>
            <xpath expr="//p[@name='payment_communication']" position="attributes">
                <attribute
                name="t-if"
            >o.move_type in ('out_invoice', 'in_refund', 'out_receipt') and o.payment_reference</attribute>
            </xpath>
            <xpath expr="//p[@name='payment_term']" position="attributes">
                <attribute
                name="t-if"
            >o.invoice_payment_term_id and o.move_type != 'out_receipt'</attribute>
            </xpath>
            <xpath expr="//p[@name='payment_communication']" position="before">
                <p
                t-if="o._get_show_amount_in_words() and o.move_type == 'out_receipt'"
            >
                    <strong>Amount In Words:</strong>
                    <t
                    t-set="amount_in_words"
                    t-value="o.currency_id.amount_to_text(o.amount_total)"
                />
                    <span t-esc="amount_in_words" />
                </p>
            </xpath>
        </template>

        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang" />
                    <t
                    t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="account_receipt_print.report_invoice_document"
                    t-lang="lang"
                />
                </t>
            </t>
        </template>
</odoo>
