<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_form_receipt" model="ir.ui.view">
        <field name="name">account.move.receipt</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="button_draft" position="after">
                <button
                    name="print_receipt"
                    type="object"
                    string="Print"
                    class="oe_highlight oe_read_only"
                    attrs="{'invisible': ['|', ('move_type', 'not in', ('out_receipt', 'in_receipt')), ('state', '=', 'cancel')]}"
                />
            </button>
        </field>
    </record>

</odoo>
