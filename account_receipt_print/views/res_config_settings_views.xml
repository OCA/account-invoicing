<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <div id="show_sale_receipts" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="show_amount_in_words">
                    <div class="o_setting_left_pane">
                        <field name="show_amount_in_words" />
                    </div>
                    <div
                        class="o_setting_right_pane"
                        name="show_amount_in_words_right_pane"
                    >
                        <label for="show_amount_in_words" string="Amount in Words" />
                        <div class="text-muted">
                            Show amount in words on sale receipts
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
